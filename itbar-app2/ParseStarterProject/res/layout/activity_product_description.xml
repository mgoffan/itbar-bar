<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.activities.ProductDescriptionActivity"
    android:background="@drawable/greenwallpaper">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:id="@+id/imageView"
        android:background="@drawable/transparente_negro"
        android:layout_below="@+id/nameproduct"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="NameProduct"
        android:id="@+id/nameproduct"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#ff000000"
        android:textSize="45dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="153dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="ProductDescription"
        android:id="@+id/productdescription"
        android:layout_alignTop="@+id/imageView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="7dp"
        android:textColor="#ffffffff"
        android:layout_toLeftOf="@+id/imgproduct"
        android:layout_toStartOf="@+id/imgproduct"
        android:layout_alignBottom="@+id/imageView"
        android:layout_marginBottom="7dp"
        android:layout_marginRight="7dp"
        android:textSize="15dp" />

    <ImageView
        android:layout_width="115dp"
        android:layout_height="wrap_content"
        android:id="@+id/imgproduct"
        android:background="@drawable/foodicon"
        android:layout_alignBottom="@+id/imageView"
        android:layout_alignRight="@+id/imageView"
        android:layout_alignEnd="@+id/imageView"
        android:layout_marginRight="7dp"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="11dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="$Price"
        android:id="@+id/productprice"
        android:textColor="#ffe2ffd0"
        android:textSize="50dp"
        android:typeface="sans"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp" />

    <ImageButton
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:id="@+id/addbtn"
        android:background="@drawable/ok"
        android:layout_below="@+id/productprice"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:nestedScrollingEnabled="false"/>

</RelativeLayout>
